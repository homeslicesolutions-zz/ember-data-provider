<h2 id="title">Ember Data Provider Component</h2>

{{#data-provider
  modelName="user"
  as |dp|
}}
  {{#if dp.isLoading}}
    Loading...
  {{else}}
    <ul>
      {{#each dp.data as |user|}}
        <li>{{user.name}}</li>
      {{/each}}
    </ul>

    <button {{action "addChipmunk"}}>
      Add Chipmunk
    </button>

    <button {{action dp.reload}}>
      Reload List
    </button>
  {{/if}}
{{/data-provider}}

{{outlet}}